{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build and debug",
      "command": "/usr/bin/g++",
      "args": [
        "-lfmt",
        "-fdiagnostics-color=always",
        "-g",
        "-DDEBUG",
        "${workspaceFolder}/tabletop.cpp",
        "${workspaceFolder}/bot.cpp",
        "-o",
        "${workspaceFolder}/bot"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type":"shell",
      "label": "clean up",
      "command": "rm",
      "args": [
        "-r",
        "-f",
        "/tmp/conn"
      ]
    }
  ],
  "version": "2.0.0"
}